{
  "name": "Python Dev Container",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  // uncomment this if running on linux.
  // addtionally, execute `xhost +local:docker` to allow
  // GUI applications to run from inside the container
  // "runArgs": [
  //   "--env=DISPLAY=${env:DISPLAY}",
  //   "--volume=/tmp/.X11-unix:/tmp/.X11-unix"
  // ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
      ]
    }
  },
  "remoteUser": "vscode"
}